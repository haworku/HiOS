{
  "manifest_version": 2,

  "name": "HiOS Music Player",
  "description": "pure javascript music player",
  "default_locale": "en",
  "version": "0.0.1",
  "author": "haworku",
  "background": {
    "persistent": false
  },
  "permissions": ["http://*/*", "tabs"],
  "content_scripts": [ {
      "css": ["dist/style.css"],
      "js": ["dist/scrip.js"],
      "matches": ["http://*/*"],
      "run_at": "document_start"
 }],

  "browser_action": {
    "default_icon": "static/icon/icon.png",
    "default_title": "Launch Player"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
